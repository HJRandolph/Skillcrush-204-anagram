<div>

<header>
<h1>Words</h1>
</header>
<div><a href="/">Back to the generator!</a></div>
<table class="table table-striped">
	<thead>
	 <th>Words</th>
	 <th>Letters</th>
	 <th colspan="2">Actions</th>
	</thead>
	<tbody>
	 <% @word.each do |word| %>
	  <tr>
	  	<td>
	  	<a href="<%= "/words/#{word.id}" %>">
	  	<%= "#{word.text}" %></a></td>
	  	<td><%= "#{word.letters}" %></td>
	  	<td><a href="<%= "/words/#{word.id}/edit" %>">Edit</a></td>
	  	<td>
	  	<form action="<%= "/words/#{word.id}" %>" method="post">
	  	<input type="hidden" name="_method" value="delete" />
	  	<button class="btn-danger" type="submit">Delete</button></td>
	  </tr>
	<% end %>
	</tbody>
</table>



</div>