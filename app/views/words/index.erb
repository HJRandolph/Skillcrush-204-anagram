<div>

<header>
<h1>Words</h1>
</header>
<div><a href="/">Back to the generator!</a></div>
<table class="table table-striped">
	<thead>
	 <th>Words</th>
	 <th>Letters</th>
	 <th colspan=2>Actions</th>
	</thead>
	<tbody>
	 <% @word.each do |word| %>
	  <tr>
	  	<td>
	  	<a href="<%= "/words/#{word.id}" %>">
	  	<%= "#{word.text}" %></a></td>
	  	<td><%= "#{word.letters}" %></td>
	  	<td><a href="<%= "/words/#{word.id}/edit" %>">Edit</a></td>
	  	<td>Delete</td>
	  </tr>
	<% end %>
	</tbody>
</table>



</div>